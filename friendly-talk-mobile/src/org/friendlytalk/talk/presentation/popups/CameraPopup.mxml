<?xml version="1.0" encoding="utf-8"?>
<s:SkinnablePopUpContainer xmlns:fx="http://ns.adobe.com/mxml/2009" 
						   xmlns:s="library://ns.adobe.com/flex/spark" 
						   skinClass="org.friendlytalk.talk.presentation.skins.CameraPopupSkin" xmlns:components="org.friendlytalk.core.presentation.components.*">
	
	<fx:Script>
		<![CDATA[
			import org.friendlytalk.talk.TalkPM;
			
			private var _model:TalkPM;
			
			[Bindable]
			public function get model():TalkPM
			{
				return this._model;
			}

			public function set model(value:TalkPM):void
			{
				this._model = value;
			}
			
		]]>
	</fx:Script>
	
	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
	</fx:Declarations>
	
	<s:VGroup left="0" top="0" right="0" bottom="0" horizontalAlign="center">
		<s:ButtonBar width="100%" dataProvider="{this.model.cameras}" selectedIndex="{this.model.media.camera}"  />
		<components:VideoDisplay width="100%" height="100%" source="{this.model.camera}" />
		<s:ButtonBar width="100%" dataProvider="{this.model.microphones}" selectedItem="{this.model.media.microphone}" />
	</s:VGroup>
	
</s:SkinnablePopUpContainer>
