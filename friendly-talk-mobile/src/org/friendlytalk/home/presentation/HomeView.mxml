<?xml version="1.0" encoding="utf-8"?>
<s:View xmlns:fx="http://ns.adobe.com/mxml/2009"
		xmlns:s="library://ns.adobe.com/flex/spark"
		currentState="{this.model.room.connecting ? 'connecting' : 'normal'}"
		title="{this.resourceManager.getString('ft', 'Home')}" xmlns:components="org.friendlytalk.talk.presentation.components.*">
	
	<fx:Script>
		<![CDATA[
			import org.friendlytalk.home.HomePM;
			
			[Bindable]
			public var model:HomePM;
			
		]]>
	</fx:Script>
	
	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
	</fx:Declarations>
	
	<fx:Binding destination="this.model" source="this.data as HomePM"/>
	
	<s:states>
		<s:State name="normal"/>
		<s:State name="connecting"/>
	</s:states>
	
	<s:Button id="joinButton" includeIn="normal" width="25%"
			  height="{uint(this.joinButton.width*0.6)}" minWidth="120" minHeight="80"
			  label="{this.resourceManager.getString('ft', 'Join')}" click="this.model.connect();"
			  horizontalCenter="0" verticalCenter="0"/>
	
	<s:Label text="{Capabilities.version}" bottom="0" />
	
	<s:Label includeIn="connecting" horizontalCenter="0"
			 text="{this.resourceManager.getString('ft', 'Connecting')}" verticalCenter="0"/>

	<s:overlayControls>true</s:overlayControls>
	
</s:View>
