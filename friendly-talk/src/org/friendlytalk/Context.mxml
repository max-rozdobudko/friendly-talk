<?xml version="1.0" encoding="utf-8"?>
<fx:Object xmlns:fx="http://ns.adobe.com/mxml/2009"
		   xmlns:application="org.friendlytalk.core.application.*"
		   xmlns:home="org.friendlytalk.home.*"
		   xmlns:talk="org.friendlytalk.talk.*"
		   xmlns:domain="org.friendlytalk.core.domain.*"
		   xmlns:infrastructure="org.friendlytalk.core.infrastructure.*" xmlns:presentation="org.friendlytalk.settings.presentation.*">
	
	<fx:Metadata>
		[ResourceBundle("ft")]
	</fx:Metadata>
	
	<fx:Declarations>
		
		<!--Domain-->
		
		<domain:Room id="room"/>

		<domain:Media id="media" />
		
		<!--Application-->
		
		<application:FrontController id="controller" connector="{this.connector}"
									 publisher="{this.publisher}" room="{this.room}" media="{this.media}"/>
	
		<!--Infrastructure-->
		
		<infrastructure:Connector id="connector"/>
		
		<infrastructure:Publisher id="publisher"/>
		
		<!--Presentation-->
		
		<home:HomePM id="homePM" connect="this.controller.connect(event);" room="{this.room}"/>
		
		<talk:TalkPM id="talkPM" broadcasters="{this.room.broadcasters}"
					 room="{this.room}" media="{this.media}"
					 toggleCamera="this.controller.toggleCamera()"
					 toggleFavorite="this.controller.toggleFavorite()"
					 toggleMicrophone="this.controller.toggleMicrophone()"/>
		
		<presentation:SettingsPM id="settings" media="{this.media}"
								 changeCamera="this.controller.setCamera(event.camera);"
								 changeMicrophone="this.controller.setMicrophone(event.microphone);" />
		
	</fx:Declarations>
	
</fx:Object>
